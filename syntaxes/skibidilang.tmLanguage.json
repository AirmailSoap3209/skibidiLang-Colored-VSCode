{
    "name": "SkibidiLang",
    "scopeName": "source.skibidilang",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#function_calls"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.conditional.skibidilang",
                    "match": "\\b(no_cap|cap)\\b"
                },
                {
                    "name": "keyword.control.loop.skibidilang",
                    "match": "\\b(ong|fr_fr)\\b"
                },
                {
                    "name": "storage.type.variable.declaration.skibidilang",
                    "match": "\\b(rizz)\\b"
                },
                {
                    "name": "entity.name.function.definition.skibidilang",
                    "match": "\\bbussin\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b"
                },
                {
                    "name": "keyword.control.return.skibidilang",
                    "match": "\\b(yeet)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arithmetic.skibidilang",
                    "match": "\\b(fanum_tax|ohio)\\b"
                },
                {
                    "name": "keyword.operator.comparison.skibidilang",
                    "match": "\\b(gyatt|ratio)\\b"
                },
                {
                    "name": "keyword.operator.logical.skibidilang",
                    "match": "\\b(alpha|beta|sigma)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.skibidilang",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.skibidilang",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.skibidilang",
                    "match": "#.*$"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.decimal.skibidilang",
                    "match": "\\b\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.readwrite.skibidilang",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "function_calls": {
            "patterns": [
                {
                    "name": "support.function.builtin.skibidilang",
                    "match": "\\b(skibidi|whats_up_unc)\\b"
                }
            ]
        }
    }
}
